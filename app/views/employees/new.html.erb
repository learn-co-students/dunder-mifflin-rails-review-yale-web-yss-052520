<% if flash[:errors] %>
    <ul>
    <% flash[:errors].each do |error| %>
        <li style="color: red">
            <%= error%>
        </li>
    <% end %>
    </ul>
<% end %>

<h3>Create Employee Form</h3>

<%= form_for @employee do |f| %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

    <%= f.label :alias %>
    <%= f.text_field :alias %>

    <%= f.label :office %>
    <%= f.text_field :office %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :img_url %>
    <%= f.text_field :img_url %>

    <%= f.collection_select :dog_id, @dogs , :id, :name %>
    
    
    <%= f.submit%>
<% end %>